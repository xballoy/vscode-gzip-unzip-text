{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>xballoy/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/(?:workflows|actions)/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "os: (?<depName>.*)-(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-runners"
    }
  ]
}
